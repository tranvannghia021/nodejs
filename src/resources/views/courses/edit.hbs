<h1>Sửa khóa học</h1>
<div class="mt-4">
  <div class="row">
    <div class="col-sm-12">
      <form method="POST" action="/courses/edit/{{course._id}}?_method=PUT">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" value="{{course.title}}" name="title" />

        </div>
        <div class="form-group">
          <label for="description">description</label>
          <input type="text" class="form-control" name="description" value="{{course.description}}" />
        </div>

        <div class="form-group">
          <label for="">id-video</label>
          <input type="text" class="form-control" name="video" value="{{course.video}}" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>